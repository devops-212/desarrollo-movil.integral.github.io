<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EcoDive_Integradora.Views"
    x:Class="EcoDive_Integradora.AppShell">

    <!-- Menú inferior (TabBar) -->
    <TabBar>
        <ShellContent Title="Inicio" ContentTemplate="{DataTemplate local:MainPage}" Icon="home_icon.png" />
        <ShellContent Title="Noticias" ContentTemplate="{DataTemplate local:InfoPage}" Icon="news_icon.png" />
        <ShellContent Title="Trivia" ContentTemplate="{DataTemplate local:TriviaPage}" Icon="contact_icon.png" />
    </TabBar>

    <!-- Rutas ocultas (sin mostrar en menú) -->
    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate local:LoginPage}" />
    <ShellContent Route="RegisterPage" ContentTemplate="{DataTemplate local:RegisterPage}" />

</Shell>
