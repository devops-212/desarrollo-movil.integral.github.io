<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EcoDive_Integradora.Views"
    x:Class="EcoDive_Integradora.AppShell">

    <!-- Menú inferior (TabBar) -->
    <TabBar>
        <ShellContent Title="Menu" ContentTemplate="{DataTemplate local:MainPage}"  />
        <ShellContent Title="ODS-14" ContentTemplate="{DataTemplate local:InfoPage}"  />
    </TabBar>

    <!-- Rutas ocultas (sin mostrar en menú) -->
    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate local:LoginPage}" />
    <ShellContent Route="RegisterPage" ContentTemplate="{DataTemplate local:RegisterPage}" />

</Shell>
