<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoDive_Integradora.Views.AddProductPage"
             Title="Agregar Contacto">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Nuevo Contacto" FontSize="24" HorizontalOptions="Center" />

            <Entry x:Name="NombreEntry" Placeholder="Nombre" />
            <Entry x:Name="ContactoEntry" Placeholder="Contacto (número)" Keyboard="Numeric"/>
            <Editor x:Name="DescripcionEntry" Placeholder="Descripción" HeightRequest="100"/>

            <Button Text="Guardar" Clicked="OnSaveClicked" BackgroundColor="#00796B" TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
