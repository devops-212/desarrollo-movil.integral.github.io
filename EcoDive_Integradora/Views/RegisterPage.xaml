<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="EcoDive_Integradora.Views.RegisterPage"
             Title="Crear cuenta"
             BackgroundColor="#E0F2F1">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Registro de Usuario" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="EmailEntry" Placeholder="Correo electrónico" TextColor="Black" />
      
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" TextColor="Black" IsPassword="True" />
       
        

        <Button Text="Crear cuenta"
                Clicked="OnRegisterClicked"
                BackgroundColor="#00796B"
                TextColor="White" />

        <Label Text="¿Ya tienes cuenta? Inicia sesión"
               TextColor="Blue"
               HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnLoginTapped" />
            </Label.GestureRecognizers>
        </Label>


        <!-- Botón oculto para crear admin -->
        <Button x:Name="CreateAdminButton"
                    Text="Crear Admin (pruebas)"
                    Clicked="OnCreateAdminClicked"
                    IsVisible="False"
                    BackgroundColor="DarkRed"
                    TextColor="White" />
    </VerticalStackLayout>
</ContentPage>