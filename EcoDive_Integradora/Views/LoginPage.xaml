<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoDive_Integradora.Views.LoginPage"
             Title="Iniciar sesión"
                BackgroundColor="#E0F2F1">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Iniciar sesión" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="EmailEntry" Placeholder="Correo electrónico" />
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" />

        <Button Text="Entrar" Clicked="OnLoginClicked" BackgroundColor="#00796B" TextColor="White"/>
        <Button Text="¿Olvidaste tu contraseña?" Clicked="OnForgotPasswordClicked" />

        <Label Text="¿No tienes cuenta? Regístrate"
               TextColor="Blue"
               HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnRegisterTapped" />
            </Label.GestureRecognizers>
            
        </Label>
    </VerticalStackLayout>
</ContentPage>
